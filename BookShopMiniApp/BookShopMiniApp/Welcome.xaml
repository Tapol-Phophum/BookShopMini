<Window x:Class="BookShopMiniApp.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShopMiniApp"
        mc:Ignorable="d"
        Title="Welcome" Height="300" Width="480">
    <Grid>
        <Image HorizontalAlignment="Left" Height="255" Margin="10,5,0,0" VerticalAlignment="Top" Width="470" Source="Welcome.jpg"/>
        <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Left" Height="35" Margin="130,200,0,0" VerticalAlignment="Top" Width="90" FontSize="14" Background="#FFB690E4" Foreground="#FFE7EEE0" Click="okBtn_Click"/>
        <Button x:Name="exitBtn" Content="Exit" HorizontalAlignment="Left" Height="35" Margin="250,200,0,0" VerticalAlignment="Top" Width="90" FontSize="14" Background="#FFB690E4" Foreground="#FFE7EEE0" Click="exitBtn_Click"/>
        <TextBox x:Name="txtwelcome" HorizontalAlignment="Left" Height="35" Margin="130,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" FontSize="16"/>

    </Grid>
</Window>
